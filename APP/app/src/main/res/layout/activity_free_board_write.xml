<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FreeBoardWriteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="자유게시판"
            android:textSize="25dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/free_board_write_et_subject_act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/bg_black"
            android:hint="제목"
            android:textSize="18dp"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/free_board_write_et_content_act"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:gravity="start"
            android:padding="10dp"
            android:layout_marginTop="40dp"
            android:hint="내용"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:background="@drawable/bg_black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="50dp">
            <Button
                android:id="@+id/free_board_write_btn_write_act"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/button_primary"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:text="게시글 쓰기"
                android:textSize="22dp"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/free_board_write_btn_finish_act"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/button_primary"
                android:layout_marginLeft="10dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:text="목 록 으 로"
                android:textSize="22dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>