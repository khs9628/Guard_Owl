<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KeepFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="25dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보관 신청"
                android:layout_weight="8"
                android:textSize="25dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/keep_btn_logout"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background="@drawable/button_primary"
                android:text="로그아웃"
                android:textSize="18dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textSize="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="5dp"
            android:background="@drawable/bg_black">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:text="보관함 번호"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>
            <Spinner
                android:id="@+id/keep_spinner"
                android:spinnerMode="dropdown"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="120dp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_black"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                android:layout_gravity="center_vertical">
                <EditText
                    android:id="@+id/keep_et_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="2"
                    android:hint="물품 이름"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="start"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/bg_black"/>
                <EditText
                    android:id="@+id/keep_et_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="2"
                    android:hint="분류"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="start"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/bg_black"/>
                >
            </LinearLayout>
            <EditText
                android:id="@+id/keep_et_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="비고"
                android:padding="5dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="start"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:background="@drawable/bg_black"/>
                <EditText
                    android:id="@+id/keep_et_content"
                    android:layout_width="match_parent"
                    android:lines="4"
                    android:layout_height="wrap_content"
                    android:hint="사유 입력"
                    android:padding="5dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="start"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/bg_black"/>
            <Button
                android:id="@+id/keep_btn_application"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/button_primary"
                android:text="보관 신청"
                android:textColor="@android:color/white"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>