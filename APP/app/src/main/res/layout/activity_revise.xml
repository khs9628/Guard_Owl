<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviseActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        android:text="개인정보 수정"
        android:paddingVertical="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop= "100dp"
        android:orientation="vertical"
        android:paddingHorizontal="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="left"
                android:text="이름"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/revise_name"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginLeft="7dp"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@android:color/darker_gray"
                android:background="@drawable/bg_black"
                android:paddingVertical="5dp"/>

            <Button
                android:id="@+id/revise_btn_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="8"
                android:background="@drawable/button_primary"
                android:paddingHorizontal="2dp"
                android:layout_marginLeft="7dp"
                android:text="수정"
                android:textColor="@android:color/white"
                android:textSize="13dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:gravity="left"
                android:text="아이디"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/revise_id"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@android:color/darker_gray"
                android:background="@drawable/bg_black"
                android:paddingVertical="5dp"/>
            <Button
                android:id="@+id/revise_check_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="8.8"
                android:background="@drawable/button_primary"
                android:paddingHorizontal="2dp"
                android:paddingVertical="7dp"
                android:layout_marginLeft="7dp"
                android:layout_gravity="center"
                android:text="중복\n확인"
                android:textSize="12dp"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/revise_btn_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="9"
                android:background="@drawable/button_primary"
                android:paddingHorizontal="2dp"
                android:layout_marginLeft="2dp"
                android:text="수정"
                android:textSize="14dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="left"
                android:text="비밀번호"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/revise_pwd1"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:hint="8~16자, 영어 대소문자, 숫자 사용 가능"
                android:textSize="13dp"
                android:textColor="@android:color/darker_gray"
                android:background="@drawable/bg_black"
                android:paddingVertical="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:paddingTop="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="left"
                android:text="비밀번호확인"
                android:textSize="17dp"/>
            <EditText
                android:id="@+id/revise_pwd2"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginLeft="7dp"
                android:gravity="center"
                android:textSize="13dp"
                android:textColor="@android:color/darker_gray"
                android:background="@drawable/bg_black"
                android:paddingVertical="10dp"/>

            <Button
                android:id="@+id/revise_btn_pwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="8"
                android:background="@drawable/button_primary"
                android:paddingHorizontal="2dp"
                android:layout_marginLeft="7dp"
                android:text="수정"
                android:textSize="14dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="left"
                android:text="휴대폰 번호"
                android:textSize="18dp"/>

            <EditText
                android:id="@+id/revise_phone"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginLeft="7dp"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@android:color/darker_gray"
                android:background="@drawable/bg_black"
                android:paddingVertical="5dp"/>

            <Button
                android:id="@+id/revise_btn_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="8"
                android:background="@drawable/button_primary"
                android:paddingHorizontal="2dp"
                android:layout_marginLeft="7dp"
                android:text="수정"
                android:textSize="14dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="left"
                android:text="이메일"
                android:textSize="18dp"/>

            <EditText
                android:id="@+id/revise_email"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginLeft="7dp"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@android:color/darker_gray"
                android:background="@drawable/bg_black"
                android:paddingVertical="5dp"/>

            <Button
                android:id="@+id/revise_btn_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="8"
                android:background="@drawable/button_primary"
                android:paddingHorizontal="2dp"
                android:layout_marginLeft="7dp"
                android:text="수정"
                android:textSize="14dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <Button
            android:id="@+id/revise_btn_finish"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_primary"
            android:layout_marginTop="30dp"
            android:paddingVertical="10dp"
            android:textStyle="bold"
            android:text="완 료"
            android:textSize="20dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>